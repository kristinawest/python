def multiply(left, right):
    return left * right

def get_num(prompt):
    return float(input(prompt))

first_number = get_num('Enter the first number: ')
second_number = get_num('Enter the second number: ')
product = multiply(first_number, second_number)
print(f'{first_number} * {second_number} = {product}')



#identifiers (variables): 
# a) Variable and constant names
# b) Function and method names
# c) Function and method parameter names
# d) Class and module names


# multiply, left, right
# get_num, prompt, left, right
# float, input, prompt
# first_number, get_num
# second_number, get_num
# product, multiply, first_number, second_number
# print, first_number, second_number, product